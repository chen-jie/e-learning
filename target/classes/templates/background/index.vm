<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>E-learning</title>
  <link rel="stylesheet" href="/static/css/index.css" />
  #parse("./common/head.vm")
  <meta name="renderer" content="webkit">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
<body>
  <div class="layui-layout-admin fly-body">
    <div class="layui-header">
      <div class="admin-title dp-ib">
        <h1 class="fs-24 dp-ib c-fff mgl-20 mgt-10">后台管理
          #if($!user.roleId == 1)
            （管理员）
          #elseif($!user.roleId == 2)
              （教师）
          #else
            （学生）
          #end
        </h1>
           </div>
      <div class="layui-top-nav dp-ib ve-t">
        <ul class="layui-nav">
          <li class="layui-nav-item">
            <a href="/">首页</a>
          </li>
        </ul>
      </div>
      <!-- 用户管理 -->
      <div href="#!" class="layui-right user">
        <!-- 头像 -->
        <a href="#!" class="user-avatar"> <img src="/static/images/user-photo.jpg" alt="" class="layui-circle"><span class="c-fff mgl-20" style="margin-right: 20px;">$!user.nickname</span> </a>
        <!-- 头像下面显示 -->
        <ul class="user-nav">
          <li class="user-nav-item">
            <a href="#!"> <i class="layui-icon">&#xe612;</i> 个人设置 </a>
          </li>
          <li class="user-nav-item">
            <a href="javascript:;" id="btn-exit"> <i class="layui-icon">&#xe623;</i> 退出 </a>
          </li>
        </ul>
      </div>
    </div>
    <div class="layui-side">
      <ul class="layui-nav layui-nav-tree" id="sideNav" lay-filter="sideNav">
        <li class="layui-nav-item">
          <a>课程管理</a>
          #if($!user.roleId == 1)
              <dl class="layui-nav-child">
                  <dd>
                      <a href="javascript:;" data-url="/admin/course/list"><label>所有课程</label></a>
                  </dd>
              </dl>
          #elseif($!user.roleId == 2)
              <dl class="layui-nav-child">
                  <dd>
                      <a href="javascript:;" data-url="/teacher/course/toAdd"><label>新增课程</label></a>
                  </dd>
                  <dd>
                      <a href="javascript:;" data-url="/teacher/course/list"><label>课程列表</label></a>
                  </dd>
              </dl>
          #else
              <dl class="layui-nav-child">
                  <dd>
                      <a href="javascript:;" data-url="/student/course/myCourseList"><label>我的课程</label></a>
                  </dd>
                  <dd>
                      <a href="javascript:;" data-url="/student/homework/unSubmitList"><label>待交作业</label></a>
                  </dd>
              </dl>
          #end
        </li>
          #if($!user.roleId == 1)
              <li class="layui-nav-item">
                  <a>用户管理</a>
                  <dl class="layui-nav-child">
                      <dd>
                          <a href="javascript:;" data-url="/admin/user/list"><label>所有用户</label></a>
                      </dd>
                      <dd>
                          <a href="javascript:;" data-url="/admin/teacher/toAdd"><label>添加教师</label></a>
                      </dd>
                  </dl>
              </li>
          #end
          <li class="layui-nav-item">
              <a>个人设置</a>
              <dl class="layui-nav-child">
                  <dd>
                      <a href="javascript:;" data-url="/background/toEdit"><label>修改密码</label></a>
                  </dd>
              </dl>
          </li>
      </ul>
    </div>
    <div class="layui-body">
      <div class="layui-tab fly-tab layui-tab-card" lay-filter="page-tab" lay-allowclose="true">
        <!--tab标题-->
        <ul class="layui-tab-title" id="tabTitle">
          <li class="layui-this" lay-id="0"><label>首页</label></li>
        </ul>
        <!--tab内容-->
        <div class="layui-tab-content" id="tabContainers">
          <div class="layui-tab-item layui-show">
        </div>
      </div>
    </div>
  </div>
  <script src="/static/layui/layui.js"></script>
  <script src="/static/js/custom/index.js"></script>
</body>
</html>