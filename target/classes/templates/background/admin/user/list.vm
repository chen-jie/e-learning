<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>用户列表</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="/static/css/index.css"/>
    #parse("./common/head.vm")
</head>

<body>
<div class="tab-body">
    <div class="layui-clear">
    </div>
    <table class="table-box table-sort" id="userTable">
        <thead>
        <tr>
            <th>用户名</th>
            <th>真实姓名</th>
            <th>Email</th>
            <th>角色</th>
            <th>操作</th>
        </tr>
        </thead>
        <tbody>
            #foreach($user in $list)
            <tr>
                <td>$!user.username</td>
                <td>$!user.nickname</td>
                <td>$!user.email</td>
                <td>
                    #if($!user.roleId == 2)
                        教师
                    #else
                        学生
                    #end
                </td>
                <td>
                    <span>
                        <button onclick="deleteUser('$!user.id')" class="layui-btn layui-btn-danger radius btn-delect"><i
                            class="layui-icon">&#x1006;</i> 删除</button>
                    </span>
                </td>
            </tr>
            #end
        </tbody>
    </table>
</div>
<script src="/static/layui/layui.js"></script>
<script>
    function deleteUser(id) {
        layer.confirm("确定要删除吗?",{icon:3,title:'提示'},function(){
            $.post("/admin/user/delete?id="+id,function (res) {
                if(res.status === 0) {
                    layer.alert(res.msg,function(){
                        layer.closeAll();
                        window.location.reload();
                    });
                } else {
                    layer.alert(res.msg);
                }
            },'json');
        })
    }
</script>
</body>

</html>